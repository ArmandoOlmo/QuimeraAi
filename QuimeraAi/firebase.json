{
  "storage": {
    "rules": "storage.rules"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "runtime": "nodejs20"
  },
  "hosting": {
    "site": "quimeraai",
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/assets/**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "GET"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.js",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      },
      {
        "source": "**/*.css",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "SAMEORIGIN"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api/gemini/generate",
        "function": "gemini-generate"
      },
      {
        "source": "/api/gemini/stream",
        "function": "gemini-stream"
      },
      {
        "source": "/api/gemini/usage/**",
        "function": "gemini-usage"
      },
      {
        "source": "/api/widget/*/leads",
        "function": "submitWidgetLead"
      },
      {
        "source": "/api/widget/*/analytics",
        "function": "trackWidgetAnalytics"
      },
      {
        "source": "/api/widget/**",
        "function": "getWidgetConfig"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}